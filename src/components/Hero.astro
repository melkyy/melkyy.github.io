---
import heroImage from '@assets/images/Aaron.jpeg';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Hi! My name is <span class="text-orange">Aaron Rodriguez</span> and I am a web developer based in Sonora, Mexico.</h1>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			title="When I was searching for a picture, this was the first one I found, and I thought it would be funny to put here."
			src={heroImage}
			alt="Super boring developer"
			format="png"
			width={500}
			height={500}
			loading="eager"
		/>
	</div>
</section>
